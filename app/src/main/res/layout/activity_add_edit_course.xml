<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".Activities.AddEditCourseActivity">

        <EditText
            android:id="@+id/course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Name"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date" />

        <EditText
            android:id="@+id/course_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="MM/DD/YYYY"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date" />

        <EditText
            android:id="@+id/course_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="MM/DD/YYYY"
            android:inputType="date" />

        <CheckBox
            android:id="@+id/course_start_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date Alarm" />

        <CheckBox
            android:id="@+id/course_end_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date Alarm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/course_radio_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_course_status_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress" />

            <RadioButton
                android:id="@+id/radio_course_status_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed" />

            <RadioButton
                android:id="@+id/radio_course_status_dropped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dropped" />

            <RadioButton
                android:id="@+id/radio_course_status_plan_to_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan To Take" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Instructor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/course_instructor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/course_instructor_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/course_instructor_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Address"
            android:inputType="textEmailAddress" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>