<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activities.AddEditAssessmentActivity">

    <EditText
        android:id="@+id/assessment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <RadioGroup
        android:id="@+id/assessment_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/objective_assessment_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objectice Assessment" />

        <RadioButton
            android:id="@+id/performance_assessment_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Assessment" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/assessment_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="MM/DD/YYYY"
        android:inputType="date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/assessment_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="MM/DD/YYYY"
        android:inputType="date" />

    <CheckBox
        android:id="@+id/assessment_start_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date Alarm" />

    <CheckBox
        android:id="@+id/assessment_end_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date Alarm" />
</androidx.appcompat.widget.LinearLayoutCompat>